@model FinalProjectEAD.Models.Item
@{
    Layout = "~/Views/Shared/_MyLayout4.cshtml";
}



@{
    ViewBag.Title = "Delete";
}


<!-- Start: MAIN CONTENT -->
<div class="content">
    <div class="container">
        <div class="page-header">
            <h1>Deletion</h1>
            <div class="row">
                <div class="span6 offset3">
                    <h4 class="widget-header">Are you sure you want to delete this item</h4>
                    <div class="widget-body">

                        <div class="center-align">


                            <div class="form-horizontal form-signin-signup">
                                Name Of Item :@Model.Name
                                <br>
                                Price : @Model.Price<br>
                                Category : @Model.Category
                                <br>
                                <br>
                                @using (Html.BeginForm())
                                {
                                    <input type="submit" value="delete" class="btn btn-primary btn-large">}
                                <a href="~/Admin/items">
                                    <input type="submit" value="Back" class="btn btn-large bottom-space"></a>

                            </div>

                        </div>





                    </div>
                </div>


            </div>
        </div>
    </div>
